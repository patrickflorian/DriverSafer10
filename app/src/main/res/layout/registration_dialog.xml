<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_bar"
    android:padding="10dp"
    tools:context=".LoginActivity"

    >

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorDriverSafer_warning"
        android:drawableEnd="@drawable/ic_exit"
        android:padding="5dp"
        android:text="Registration Form"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold">

    </TextView>

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_title"
        android:layout_marginTop="20dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_border">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/name"
                        style="@style/Base.ThemeOverlay.AppCompat.Light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_mode_edit_mini"
                        android:hint="noms et prenoms"
                        android:inputType="text|textPersonName"
                        android:selectAllOnFocus="true"
                        android:singleLine="true"
                        android:textColor="@color/colorDriverSafer_background"
                        android:textColorHint="@color/colorDriverSafer_background" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="5dp"
                        android:gravity="right"
                        android:labelFor="@+id/name"
                        android:text="noms en lettres capitales "
                        android:textAlignment="gravity"
                        android:textColor="#8f9c90"
                        android:textSize="10dp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/email_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_layout"
                    android:layout_marginTop="1mm"
                    android:background="@drawable/white_border">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/email"
                        style="@style/Base.ThemeOverlay.AppCompat.Light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_mode_edit_mini"
                        android:hint="Email"
                        android:inputType="text|textPersonName"
                        android:selectAllOnFocus="true"
                        android:singleLine="true"
                        android:textColor="@color/colorDriverSafer_background"
                        android:textColorHint="@color/colorDriverSafer_background" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="5dp"
                        android:gravity="right"
                        android:labelFor="@+id/email"
                        android:text="eg: john@example.com"
                        android:textAlignment="gravity"
                        android:textColor="#8f9c90"
                        android:textSize="10dp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/cni_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/email_layout"
                    android:layout_marginTop="1mm"
                    android:background="@drawable/white_border">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/cni"
                        style="@style/Base.ThemeOverlay.AppCompat.Light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_mode_edit_mini"
                        android:hint="CNI"
                        android:inputType="textNoSuggestions"
                        android:selectAllOnFocus="true"
                        android:singleLine="true"
                        android:textColor="@color/colorDriverSafer_background"
                        android:textColorHint="@color/colorDriverSafer_background" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="5dp"
                        android:gravity="right"
                        android:labelFor="@+id/name"
                        android:text="contient 10 caracters"
                        android:textAlignment="gravity"
                        android:textColor="#8f9c90"
                        android:textSize="10dp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/pass_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cni_layout"
                    android:layout_marginTop="1mm"
                    android:background="@drawable/white_border">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/pass"
                        style="@style/Base.ThemeOverlay.AppCompat.Light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_visibility_off_mini"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:selectAllOnFocus="true"
                        android:singleLine="true"
                        android:textColor="@color/colorDriverSafer_background"
                        android:textColorHint="@color/colorDriverSafer_background" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="5dp"
                        android:gravity="right"
                        android:labelFor="@+id/name"
                        android:text="8 caracteres minimum "
                        android:textAlignment="gravity"
                        android:textColor="#8f9c90"
                        android:textSize="10dp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/confirm_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pass_layout"
                    android:layout_marginTop="1mm"
                    android:background="@drawable/white_border">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/confirm"
                        style="@style/Base.ThemeOverlay.AppCompat.Light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_visibility_off_mini"
                        android:hint="Confirm password"
                        android:inputType="text|textPassword"
                        android:selectAllOnFocus="true"
                        android:singleLine="true"
                        android:textColor="@color/colorDriverSafer_background"
                        android:textColorHint="@color/colorDriverSafer_background" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="5dp"
                        android:gravity="right"
                        android:labelFor="@+id/name"
                        android:text="reenter password"
                        android:textAlignment="gravity"
                        android:textColor="#8f9c90"
                        android:textSize="10dp" />
                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>
        </ScrollView>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content">

        <Button
            android:id="@+id/dialog_positive_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_background_transparent_warning"
            android:text="OK"
            android:textColor="@color/colorDriverSafer_warning" />

        <Button
            android:id="@+id/dialog_negative_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/dialog_positive_btn"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@id/dialog_positive_btn"
            android:background="@drawable/btn_background_transparent_error"
            android:text="No"
            android:textColor="@color/colorDriverSafer_error" />
    </RelativeLayout>

</RelativeLayout>